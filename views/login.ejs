<%- include('partials/header') -%>

<main class="hero min-h-fit  bg-base-100">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h1 class="text-amber-400 text-5xl font-bold"><a href="/feed">betaGram</a></h1>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-300">
      <div class="card-body">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
          <div class="alert alert-warning shadow-lg">
            <div>
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
              <span><%= el.msg %></span>
            </div>
          </div>
          <% }) %> <% } %> <% if (locals.messages.info) { %> <%
          messages.info.forEach( el => { %>
          <div class="alert alert-info"><%= el.msg %></div>
          <% }) %> <% } %>
        <form action="/login" method="POST">
          <div class="form-control">
            <label for="exampleInputEmail1" class="form-label">
              <span class="label-text">Email</span>
            </label>
            <input type="email" placeholder="example@mail.com" class="form-control input input-bordered" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"/>
          </div>
          <div class="form-control">
            <label for="exampleInputPassword1" class="form-label label">
              <span class="label-text">Password</span>
            </label>
            <input type="password" placeholder="password" class="form-control input input-bordered" id="exampleInputPassword1" name="password"/>
            <!-- Implement password recovery with email -->
            <!-- <label class="label">
              <a href="#" class="label-text-alt link link-hover">Forgot password?</a>
            </label> -->
          </div>
          <div class="form-control mt-6">
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/signup" class="col-3 btn btn-primary"> Signup</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') -%>