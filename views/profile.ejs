<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="navbar b/g-base-200">
          <div class="flex-1">
              <p><%= user.userName %></p>
          </div>
          <div class="flex-none">
            <ul class="menu menu-horizontal p-0">
              <li>
                <label for="my-modal-3" class="btn modal-button btn-ghost normal-case text-xl">Add Post</label>
              </li>
              <li><a class="btn btn-ghost normal-case text-xl" href="/feed">Feed</a></li>
              <li><a href="/logout" class="btn btn-ghost normal-case text-xl">Logout</a></li>
            </ul>
          </div>
      </div>
      <div class="hero min-h-screen bg-base-300">
        <ul class="hero-content flex-wrap lg:flex-row">
        <% for(i = posts.length - 1; i >= 0; i--) {%>
          <div class="artboard phone-1">
            <li>
              <a href="/post/<%= posts[i]._id%>">
                <figure>
                  <video id="doc-player"  controls  muted  class="min-h-fit max-h-fit cld-video-player cld-fluid rounded-xl shadow-2xl" src="<%= posts[i].media %>"></video>
                </figure>
                <!-- <div class="card-body bg-base-200 shadow-xl">
                  <div class="card-actions justify-end">
                    <div class="badge badge-outline">Fashion</div> 
                    <div class="badge badge-outline">Products</div>
                  </div>
                </div> -->
              </a>
            </li>
          </div>
        <% } %>
        </ul>
      </div>  
    </div>
  </div>
</div>
<input type="checkbox" id="my-modal-3" class="modal-toggle" />
<div class="modal">
  <div class="modal-box relative">
    <label for="my-modal-3" class="btn btn-sm btn-circle absolute right-2 top-2">âœ•</label>
    <h2 class="text-3xl">Post Beta</h2>
    <form action="/post/createPost" enctype="multipart/form-data" method="POST">
      <div class="mb-3">
        <textarea class="form-control textarea textarea-primary" id="caption" name="caption"></textarea>
      </div>
      <div class="mb-3">
        <input type="file" class="form-control select select-primary w-full max-w-xs" id="mediaUpload" name="file">
      </div>
      <button type="submit" class="btn btn-primary" value="Upload">Post</button>
    </form>
  </div>
</div>
<%- include('partials/footer') -%>