<%- include('partials/header') -%>

<main class="bg-dark vh-100">
  <div class="container py-5">
    <div class="text-center lg:text-left">
      <h1><a class="text-warning text-decoration-none" href="/feed">betaGram</a></h1>
    </div>
    <div class="card bg-dark">
      <div class="card-body">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
          <div class="alert alert-warning">
            <div>
              <span><%= el.msg %></span>
            </div>
          </div>
          <% }) %> <% } %> <% if (locals.messages.info) { %> <%
          messages.info.forEach( el => { %>
          <div class="alert alert-danger"><%= el.msg %></div>
          <% }) %> <% } %>
        <form action="/signup" method="POST">
          <div class="form-control bg-dark border-dark">
            <label for="userName" class="form-label">
              <span class="label-text text-light">Username</span>
            </label>
            <input type="text" placeholder="Jacky" class="form-control input input-bordered bg-dark text-light" id="userName" name="userName"/>
          </div>
          <div class="form-control bg-dark border-dark">
            <label for="exampleInputEmail1" class="form-label">
              <span class="label-text text-light">Email Address</span>
            </label>
            <input type="email" placeholder="example@mail.com" class="form-control input input-bordered bg-dark text-light" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"/>
          </div>
          <div class="form-control bg-dark border-dark">
            <label for="password" class="form-label label">
              <span class="label-text text-light">Password</span>
            </label>
            <input type="password" placeholder="password" class="form-control input input-bordered bg-dark text-light" id="password" name="password"/>
            <!-- Implement password recovery with email -->
            <!-- <label class="label">
              <a href="#" class="label-text-alt link link-hover">Forgot password?</a>
            </label> -->
          </div>
          <div class="form-control bg-dark border-dark">
            <label for="confirmPassword" class="form-label label">
              <span class="label-text text-light">Confirm Password</span>
            </label>
            <input type="password" placeholder="password" class="form-control input input-bordered bg-dark text-light" id="confirmPassword" name="confirmPassword"/>
          </div>
          <div class="form-control bg-dark border-dark">
            <button type="submit" class="btn btn-success">Signup</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>

